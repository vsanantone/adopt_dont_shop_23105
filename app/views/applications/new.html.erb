<h1>New Application</h1>

<%= form_with url: "/applications", method: :post, html: { id: 'form' }, data: { turbo: false }, local: true do |form| %>

  <% if @application.errors.any? %>
    <div style="color: red;">
      <p>Please fill in all required fields.</p>
    </div>
  <% end %> 
  
  <div class="form-field">
  <%= form.label :applicant_name %>
  <%= form.text_field :applicant_name %>
  </div>

  <div class="form-field">
  <%= form.label :address %>
  <%= form.text_field :address %>
  </div>

  <div class="form-field">
  <%= form.label :city %>
  <%= form.text_field :city %>
  </div>

  <div class="form-field">
  <%= form.label :state %>
  <%= form.text_field :state %>
  </div>

  <div class="form-field">
  <%= form.label :zip_code %>
  <%= form.text_field :zip_code %>
  </div>

  <div class="form-field">
  <%= form.label :description, "Why my home is a good fit for a new pet:" %>
  <%= form.text_area :description %>
  </div>

  <div class="form-field">
  <%= form.submit "Submit" %>
  </div>
<% end %>